<%-include("navbar.ejs")%>


<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h3 class="text-center mb-4">Add Services</h3>
        <div class="tab-content mt-3">
            <!-- Mobile Number -->
            <div >
                <form action="/admin/save_servicepage" method="post" >
                    <div class="mb-3">
                        <label class="form-label">Add Services Name</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="heading"  required>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Services Information</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input type="text" class="form-control" name="description" required>
                        </div>
                    </div>
           
                    <button type="submit" class="btn btn-primary w-100">Add Services</button>
                </form>
            </div>
        </div>
    </div>
</div>



<div class="container">
    <table class="table table-bordered">
            <tr>
                <th>Action</th>
                <th>Sr.No.</th>
                <th>Name</th>
                <th>descriptionription</th>
                
            </tr>
            <%servicepage.map((row,i)=>{ %>
                
                <tr>
                    <td>
                      <a href="/admin/edit_servicepage/<%-row.servicepage_id%>"><button class="btn btn-primary text-light"><i class="fa-solid fa-pen-to-square"></i></button></a>
                      <a href="/admin/delete_servicepage/<%-row.servicepage_id%>"><button class="btn btn-danger text-light"><i class="fa-solid fa-trash"></i></button></a>
                    </td>
                    <td><%-i+1%></td>                   
                    <td><%-row.heading%></td> 
                    <td><%-row.description%></td>
                </tr>

            <% }) %>
    </table>
</div>

<%-include("footer.ejs")%>